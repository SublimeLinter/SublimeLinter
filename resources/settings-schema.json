{
    "$schema":"http://json-schema.org/draft-04/schema#",
    "type":"object",
    "properties":{
        "debug":{
            "type":"boolean"
        },
        "delay":{
            "type":"number"
        },
        "gutter_theme":{
            "type":"string"
        },
        "lint_mode":{
            "type":"string",
            "pattern":"^(background|load_save|manual)$"
        },
        "linters":{
            "type":"object",
            "additionalProperties":{
                "type":"object",
                "properties":{
                    "styles":{
                        "type":"array",
                        "items":{
                            "type":"object",
                            "properties":{
                                "mark_style":{
                                    "type":"string",
                                    "pattern":"^(fill|outline|solid_underline|squiggly_underline|stippled_underline|none)$"
                                },
                                "priority":{
                                    "type":"integer",
                                    "minimum":0
                                },
                                "scope":{
                                    "type":"string"
                                },
                                "icon":{
                                    "type":"string"
                                },
                                "types":{
                                    "type":"array",
                                    "items":{
                                        "type":"string",
                                        "pattern":"^(error|warning)$"
                                    },
                                    "minItems":1,
                                    "uniqueItems":true
                                },
                                "codes":{
                                    "type":"array",
                                    "items":{
                                        "type":"string"
                                    },
                                    "minItems":1,
                                    "uniqueItems":true
                                }
                            },
                            "required":[
                                "scope"
                            ],
                            "additionalProperties":false
                        }
                    }
                }
            }
        },
        "no_column_highlights_line":{
            "type":"boolean"
        },
        "paths":{
            "type":"object"
        },
        "python_paths":{
            "type":"object"
        },
        "shell_timeout":{
            "type":"number"
        },
        "show_hover_line_report":{
            "type":"boolean"
        },
        "show_hover_region_report":{
            "type":"boolean"
        },
        "show_marks_in_minimap":{
            "type":"boolean"
        },
        "syntax_map":{
            "type":"object"
        },
        "styles":{
            "type":"array",
            "items":{
                "type":"object",
                "properties":{
                    "mark_style":{
                        "type":"string",
                        "pattern":"^(fill|outline|solid_underline|squiggly_underline|stippled_underline|none)$"
                    },
                    "priority":{
                        "type":"integer",
                        "minimum":0
                    },
                    "scope":{
                        "type":"string"
                    },
                    "icon":{
                        "type":"string"
                    },
                    "types":{
                        "type":"array",
                        "items":{
                            "type":"string",
                            "pattern":"^(error|warning)$"
                        },
                        "minItems":1,
                        "uniqueItems":true
                    }
                },
                "required":[
                    "mark_style",
                    "priority",
                    "scope",
                    "icon",
                    "types"
                ],
                "additionalProperties":false
            }
        }
    }
}
